<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Member"> <!-- 매퍼 네임스페이스 명을 Member로 지정함. -->
<!-- mybatis 쿼리문을 다루는 태그를 mapper(매퍼)태그라고 부른다.  -->

  <!-- 회원 저장 -->
  <insert id="m_in" parameterType="member">
    <!-- parameterType 속성은 전달인자 타입이고,member 는 mybatis-config.xml에서
    설정한 MemberVO빈클래스 객체별칭 이름이다.이 별칭명을 안쓰면 풀패키지 경로인 net.daum.vo.
    MemberVO를 기입해야 한다. parameterType 속성은 생략가능하다. -->
    
    insert into tbl_member(userid,userpw,username,email,regdate)
    values(#{userid}, #{userpw}, #{username}, #{email}, sysdate)
    <!--  #{userid}를 자바코드로 표현하면 member.getUserid()와 같다. -->
  </insert>
</mapper>